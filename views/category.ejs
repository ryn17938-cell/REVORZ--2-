<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Katalog Produk - Kategori</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/global.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8fafc;
        }
        .product-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body class="font-sans text-gray-800 min-h-screen flex flex-col">

    <!-- Header -->
    <header class="bg-white bg-opacity-90 shadow-lg py-4 backdrop-blur-md sticky top-0 z-40">
        <div class="container mx-auto flex justify-between items-center px-4">
            <a href="/" class="flex items-center space-x-3 text-3xl font-bold text-blue-600 hover:text-blue-700 transition duration-300">
                <img src="/image/Logo.png" alt="REVOZ Logo" class="logo h-16 w-16 object-contain">
                <span>REVOZ</span>
            </a>
            <nav class="hidden md:flex space-x-6 ml-8">
                <a href="/" class="text-gray-600 hover:text-blue-600 transition duration-300">Beranda</a>
                <a href="/catalog" class="text-gray-600 hover:text-blue-600 transition duration-300">Katalog</a>
                <a href="/category" class="text-blue-600 font-semibold border-b-2 border-blue-600 transition duration-300">Kategori</a>
                <a href="/about" class="text-gray-600 hover:text-blue-600 transition duration-300">Tentang Kami</a>
                <a href="/contact" class="text-gray-600 hover:text-blue-600 transition duration-300">Kontak</a>
                <% if (role === 'admin') { %>
                    <a href="/admin/add-product" class="text-gray-600 hover:text-blue-600 transition duration-300">Tambah Produk</a>
                <% } %>
            </nav>

            <!-- Search Bar -->
            <div class="flex-1 flex justify-center px-8">
                <form action="/category" method="get" class="w-full max-w-lg">
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center">
                            <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                            </svg>
                        </span>
                        <input class="search-input w-full pl-10 pr-4 py-2 rounded-full text-gray-700 border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" type="text" name="q" placeholder="Cari produk...">
                    </div>
                </form>
            </div>
            <div class="flex items-center space-x-4">
                <a href="/cart" class="relative text-gray-600 hover:text-blue-600 transition duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 0a2 2 0 100 4 2 2 0 000-4z" /></svg>
                    <span class="absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full px-1"><%= cartItemCount %></span>
                </a>
                <% if (isLoggedIn) { %>
                    <div class="flex items-center space-x-2">
                        <% if (profilePicture) { %>
                            <img src="<%= profilePicture %>" alt="Profile" class="w-8 h-8 rounded-full object-cover">
                        <% } else { %>
                            <div class="w-8 h-8 rounded-full bg-blue-500 flex items-center justify-center text-white font-bold text-sm"><%= username.charAt(0).toUpperCase() %></div>
                        <% } %>
                        <a href="/profile" class="text-gray-600 hover:text-blue-600 font-medium">Halo, <%= username %></a>
                    </div>
                    <a href="/logout" class="text-red-600 hover:text-red-700 font-medium">Logout</a>
                <% } else { %>
                    <a href="/login" class="text-gray-600 hover:text-blue-600"><svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg></a>
                <% } %>
            </div>
        </div>
    </header>

    <main class="container mx-auto flex flex-col lg:flex-row gap-8 py-8 px-4">

        <!-- Sticky Sidebar for Filters -->
        <aside class="w-full lg:w-1/4 xl:w-1/5">
            <div class="lg:sticky lg:top-28">
                <form id="filter-form" action="/category" method="GET" class="space-y-6">
                    <!-- Search Filter -->
                    <div class="bg-white p-5 rounded-xl shadow-sm border border-gray-200">
                        <h3 class="font-bold text-lg mb-3 text-gray-800">Cari Produk</h3>
                        <input type="search" name="q" placeholder="Nama produk..." class="w-full border-gray-300 border rounded-lg p-2 text-sm focus:ring-blue-500 focus:border-blue-500 transition" value="<%= filters.q || '' %>">
                    </div>

                    <!-- Sorting -->
                    <div class="bg-white p-5 rounded-xl shadow-sm border border-gray-200">
                        <h3 class="font-bold text-lg mb-3 text-gray-800">Urutkan</h3>
                        <select name="sort" class="w-full border border-gray-300 rounded-lg p-2 text-sm focus:ring-blue-500 focus:border-blue-500 transition" onchange="this.form.submit()">
                            <option value="" <%= !filters.sort ? 'selected' : '' %>>Terbaru</option>
                            <option value="price_desc" <%= filters.sort === 'price_desc' ? 'selected' : '' %>>Harga Tertinggi</option>
                            <option value="price_asc" <%= filters.sort === 'price_asc' ? 'selected' : '' %>>Harga Terendah</option>
                            <option value="rating_desc" <%= filters.sort === 'rating_desc' ? 'selected' : '' %>>Rating Tertinggi</option>
                            <option value="name_asc" <%= filters.sort === 'name_asc' ? 'selected' : '' %>>Nama: A-Z</option>
                            <option value="name_desc" <%= filters.sort === 'name_desc' ? 'selected' : '' %>>Nama: Z-A</option>
                        </select>
                    </div>

                    <!-- Brand Filter -->
                    <div class="bg-white p-5 rounded-xl shadow-sm border border-gray-200">
                        <h3 class="font-bold text-lg mb-3 text-gray-800">Merek</h3>
                        <select name="brand" class="w-full border border-gray-300 rounded-lg p-2 text-sm focus:ring-blue-500 focus:border-blue-500 transition" onchange="this.form.submit()">
                            <option value="">Semua Merek</option>
                            <% uniqueBrands.forEach(b => { %>
                                <option value="<%= b %>" <%= filters.brand === b ? 'selected' : '' %>><%= b %></option>
                            <% }); %>
                        </select>
                    </div>

                    <!-- Rating Filter -->
                    <div class="bg-white p-5 rounded-xl shadow-sm border border-gray-200">
                        <h3 class="font-bold text-lg mb-3 text-gray-800">Minimum Rating</h3>
                        <select name="min_rating" class="w-full border border-gray-300 rounded-lg p-2 text-sm focus:ring-blue-500 focus:border-blue-500 transition" onchange="this.form.submit()">
                            <option value="">Semua Rating</option>
                            <% for (let i = 4; i >= 1; i--) { %>
                                <option value="<%= i %>" <%= filters.min_rating == i ? 'selected' : '' %>>Minimal <%= i %> Bintang</option>
                            <% } %>
                        </select>
                    </div>

                    <button type="submit" class="w-full bg-blue-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-700 transition-all duration-300 shadow-md">Terapkan Filter</button>
                </form>
            </div>
        </aside>

        <!-- Main Content - Product Grid -->
        <section class="w-full lg:w-3/4 xl:w-4/5">
            <div class="mb-6 bg-white p-4 rounded-xl shadow-sm border border-gray-200 flex justify-between items-center">
                <h1 class="text-2xl font-bold text-gray-800"><%= filters.q ? `Hasil untuk "${filters.q}"` : "Semua Produk" %></h1>
                <span class="text-gray-600 font-medium">Menampilkan <%= products.length %> dari <%= pagination.totalProducts %> produk</span>
            </div>

            <% if (products.length) { %>
                <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">
                    <% products.forEach(p => { %>
                        <div class="product-card group bg-white rounded-xl border border-gray-200 overflow-hidden shadow-sm hover:shadow-2xl hover:border-blue-400 transition-all duration-500 ease-in-out transform hover:-translate-y-2">
                            <a href="/product/<%= p.id %>" class="block overflow-hidden" aria-label="Lihat detail <%= p.name %>">
                                <div class="w-full h-64 bg-gray-100">
                                    <img src="<%= p.image || '/image/katalog.png' %>" alt="<%= p.name %>" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"/>
                                </div>
                            </a>
                            <div class="p-5">
                                <h3 class="text-lg font-bold text-gray-800 truncate mb-1"><a href="/product/<%= p.id %>" class="hover:text-blue-600 transition-colors"><%- highlightSearchTerm(p.name, filters.q) %></a></h3>
                                <p class="text-gray-600 text-sm mb-4 h-10"><%- highlightSearchTerm((p.description || 'Deskripsi produk tidak tersedia.').replace(/<[^>]+>/g, '').substring(0, 80) + '...', filters.q) %></p>
                                <div class="flex justify-between items-center pt-4 border-t border-gray-100">
                                    <span class="text-blue-700 font-extrabold text-xl">Rp <%= p.price.toLocaleString('id-ID') %></span>
                                    <a href="/product/<%= p.id %>" class="btn-primary inline-flex items-center text-xs font-bold py-2 px-4 rounded-full">
                                        <span>Detail</span>
                                        <svg class="w-4 h-4 ml-1.5 transform transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="text-center py-20 bg-white rounded-xl shadow-sm border border-gray-200">
                    <h2 class="text-3xl font-semibold text-gray-700">Tidak Ada Produk</h2>
                    <p class="text-gray-500 mt-3">Tidak ada produk yang cocok dengan filter Anda.</p>
                    <a href="/category" class="mt-6 inline-block bg-blue-600 text-white font-bold py-2 px-5 rounded-lg hover:bg-blue-700 transition-all">Hapus Filter</a>
                </div>
            <% } %>

            <!-- Pagination -->
            <div class="flex justify-center mt-10 space-x-2">
                <% if (pagination.totalPages > 1) { %>
                    <% 
                    const urlParams = new URLSearchParams(filters);
                    const currentPage = pagination.page;
                    const totalPages = pagination.totalPages;
                    const maxPagesToShow = 5;
                    let startPage = Math.max(1, currentPage - Math.floor(maxPagesToShow / 2));
                    let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);
                    if (endPage - startPage + 1 < maxPagesToShow) {
                        startPage = Math.max(1, endPage - maxPagesToShow + 1);
                    }
                    %>

                    <% if (currentPage > 1) { %>
                        <% urlParams.set('page', currentPage - 1); %>
                        <a href="?<%= urlParams.toString() %>" class="bg-white text-gray-700 px-4 py-2 rounded-lg hover:bg-blue-600 hover:text-white transition-colors duration-200 border border-gray-300 shadow-sm">‹</a>
                    <% } %>

                    <% for (let i = startPage; i <= endPage; i++) { %>
                        <% urlParams.set('page', i); %> 
                        <a href="?<%= urlParams.toString() %>" 
                           class="<%= currentPage === i ? 'bg-blue-600 text-white border-blue-600' : 'bg-white text-gray-700 border-gray-300' %> px-4 py-2 rounded-lg hover:bg-blue-600 hover:text-white transition-colors duration-200 border shadow-sm">
                            <%= i %>
                        </a>
                    <% } %>

                    <% if (currentPage < totalPages) { %>
                        <% urlParams.set('page', currentPage + 1); %>
                        <a href="?<%= urlParams.toString() %>" class="bg-white text-gray-700 px-4 py-2 rounded-lg hover:bg-blue-600 hover:text-white transition-colors duration-200 border border-gray-300 shadow-sm">›</a>
                    <% } %>
                <% } %>
            </div>
        </section>
    </main>

    <footer class="site-footer bg-gray-800 text-white py-8 mt-12">
        <div class="container mx-auto text-center px-4">
            <p>&copy; 2025 REVOZ. Semua Hak Dilindungi.</p>
        </div>
    </footer>

    <script>
        const sortDropdown = document.getElementById('sort-dropdown');
        const sortButton = document.getElementById('sort-button');
        const sortOptions = document.getElementById('sort-options');
        const sortLabel = document.getElementById('sort-label');
        const sortValueInput = document.getElementById('sort-value');

        // Set initial label based on current filter
        const initialSortValue = '<%= filters.sort || "" %>';
        const initialSortOption = document.querySelector(`.sort-option[data-value="${initialSortValue}"]`);
        if (initialSortOption) {
            sortLabel.textContent = initialSortOption.textContent;
        }

        // Toggle dropdown
        sortButton.addEventListener('click', (e) => {
            e.stopPropagation();
            sortOptions.classList.toggle('hidden');
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', (e) => {
            if (!sortDropdown.contains(e.target)) {
                sortOptions.classList.add('hidden');
            }
        });

        // Handle option selection
        document.querySelectorAll('.sort-option').forEach(option => {
            option.addEventListener('click', (e) => {
                e.preventDefault();
                const selectedValue = e.target.dataset.value;
                
                sortValueInput.value = selectedValue;
                
                document.getElementById('filter-form').submit();
            });
        });
    </script>

</body>
</html>