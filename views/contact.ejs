  <script>
    // AJAX form submit for nicer UX
    const form = document.getElementById('contact-form');
    const result = document.getElementById('contact-result');
    form.addEventListener('submit', async (e)=>{
      e.preventDefault();
      const fd = new FormData(form);
      const body = {};
      fd.forEach((v,k)=>body[k]=v);
      try{
        const res = await fetch('/contact', { method: 'POST', headers: {'Content-Type':'application/json'}, body: JSON.stringify(body) });
        const j = await res.json();
        if(j.ok){
          result.innerHTML = '<div class="p-3 bg-green-50 text-green-700 rounded">Pesan berhasil dikirim. Terima kasih!</div>';
          form.reset();
        } else {
          result.innerHTML = '<div class="p-3 bg-red-50 text-red-700 rounded">'+(j.message||'Gagal mengirim pesan')+'</div>';
        }
      }catch(err){
        result.innerHTML = '<div class="p-3 bg-red-50 text-red-700 rounded">Terjadi kesalahan jaringan.</div>';
      }
    });
  </script>
