<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tambah Produk - Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/global.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
background: linear-gradient(135deg, #fdfbfb,  #f9fdff, #b8dcff, #85dcff);
            min-height: 100vh;
        }
        .form-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }
        .input-field {
            transition: all 0.3s ease;
        }
        .input-field:focus {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        .btn-submit {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            transition: all 0.3s ease;
        }
        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.4);
        }
    </style>
</head>
<body class="font-sans text-gray-800 min-h-screen flex flex-col">

    <!-- Header -->
    <header class="bg-white bg-opacity-90 shadow-lg py-4 backdrop-blur-md">
        <div class="container mx-auto flex justify-between items-center px-4">
            <!-- Logo -->
            <a href="/" class="flex items-center space-x-3 text-3xl font-bold text-blue-600 hover:text-blue-700 transition duration-300">
                <img src="/image/Logo.png" alt="REVOZ Logo" class="logo h-16 w-16 object-contain">
                <span>REVOZ</span>
            </a>

            <!-- Navigation -->
            <nav class="hidden md:flex space-x-6 ml-8">
                <a href="/" class="text-gray-600 hover:text-blue-600 transition duration-300">Beranda</a>
                <a href="/category" class="text-gray-600 hover:text-blue-600 transition duration-300">Kategori</a>
                <a href="/about" class="text-gray-600 hover:text-blue-600 transition duration-300">Tentang Kami</a>
                <a href="/contact" class="text-gray-600 hover:text-blue-600 transition duration-300">Kontak</a>
                <% if (role === 'admin') { %>
                    <a href="/admin/add-product" class="text-blue-600 font-semibold border-b-2 border-blue-600 transition duration-300">Tambah Produk</a>
                <% } %>
            </nav>

            <!-- Search Bar -->
            <div class="flex-1 flex justify-center px-8">
                <form action="/category" method="get" class="w-full max-w-lg">
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center">
                            <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                            </svg>
                        </span>
                        <input class="search-input w-full pl-10 pr-4 py-2 rounded-full text-gray-700 border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" type="text" name="q" placeholder="Cari produk...">
                    </div>
                </form>
            </div>

            <!-- Utility Icons -->
            <div class="flex items-center space-x-4">
                <a href="/cart" class="relative text-gray-600 hover:text-blue-600 transition duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 0a2 2 0 100 4 2 2 0 000-4z" />
                    </svg>
                    <span class="absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full px-1"><%= cartItemCount %></span>
                </a>
                <% if (isLoggedIn) { %>
                    <div class="flex items-center space-x-2">
                        <% if (profilePicture) { %>
                            <img src="<%= profilePicture %>" alt="Profile" class="w-8 h-8 rounded-full object-cover border-2 border-blue-500">
                        <% } else { %>
                            <div class="w-8 h-8 rounded-full bg-blue-500 flex items-center justify-center text-white font-bold text-sm">
                                <%= username.charAt(0).toUpperCase() %>
                            </div>
                        <% } %>
                        <a href="/profile" class="text-gray-600 hover:text-blue-600 font-medium transition duration-300">Halo, <%= username %></a>
                    </div>
                    <a href="/logout" class="text-red-600 hover:text-red-700 font-medium transition duration-300">Logout</a>
                <% } else { %>
                    <a href="/login" class="text-gray-600 hover:text-blue-600 transition duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </a>
                <% } %>
            </div>
        </div>
    </header>

    <!-- Breadcrumb -->
    <nav class="container mx-auto px-4 py-4">
        <ol class="flex items-center space-x-2 text-sm text-gray-600">
            <li><a href="/" class="hover:text-blue-600 transition duration-300">Beranda</a></li>
            <li><span class="text-gray-400">/</span></li>
            <li class="text-blue-600 font-medium">Tambah Produk</li>
        </ol>
    </nav>

    <!-- Add Product Form -->
    <section class="container mx-auto py-12 px-4 flex-grow flex justify-center">
        <div class="form-container p-8 w-full max-w-2xl">
            <div class="text-center mb-8">
                <h1 class="text-4xl font-bold text-gray-900 mb-2">Tambah Produk Baru</h1>
                <p class="text-gray-600">Isi detail produk untuk menambahkannya ke katalog</p>
            </div>
            <form action="/api/products/add" method="POST" enctype="multipart/form-data" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="name" class="block text-gray-700 font-semibold mb-2 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                            </svg>
                            Nama Produk
                        </label>
                        <input type="text" id="name" name="name" required class="input-field w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    <div>
                        <label for="price" class="block text-gray-700 font-semibold mb-2 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
                            </svg>
                            Harga (Rp)
                        </label>
                        <input type="number" id="price" name="price" required class="input-field w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    <div>
                        <label for="warna" class="block text-gray-700 font-semibold mb-2 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-pink-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2V5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4zm-4 0h12a2 2 0 002-2V5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4z" />
                            </svg>
                            Warna (pisahkan dengan koma)
                        </label>
                        <input type="text" id="warna" name="warna" class="input-field w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Contoh: Merah,Biru,Hijau">
                    </div>
                    <div>
                        <label for="ukuran" class="block text-gray-700 font-semibold mb-2 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9m-3-4h6m-2 4h2m-4 0h2m-2 4h2m-4 0h2m-2 4h2m-4 0h2" />
                            </svg>
                            Ukuran (pisahkan dengan koma)
                        </label>
                        <input type="text" id="ukuran" name="ukuran" class="input-field w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Contoh: S,M,L,XL">
                    </div>
                </div>
                <div>
                    <label for="description" class="block text-gray-700 font-semibold mb-2 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        Deskripsi
                    </label>
                    <textarea id="description" name="description" required class="input-field w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" rows="4" placeholder="Jelaskan produk secara detail..."></textarea>
                </div>
                <div>
                    <label for="spesifikasi" class="block text-gray-700 font-semibold mb-2 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                        </svg>
                        Spesifikasi
                    </label>
                    <textarea id="spesifikasi" name="spesifikasi" class="input-field w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" rows="6" placeholder="Masukkan setiap spesifikasi pada baris baru..."></textarea>
                </div>
                <div>
                    <label for="image" class="block text-gray-700 font-semibold mb-2 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-orange-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        Upload Gambar Produk (Bisa lebih dari satu)
                    </label>
                    <div class="relative">
                        <input type="file" id="image" name="image" accept="image/*" class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10" multiple>
                        <div id="upload-area" class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center hover:border-blue-500 transition duration-300 bg-gray-50 hover:bg-blue-50 cursor-pointer">
                            <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                            </svg>
                            <p class="text-gray-600 mb-2">Klik untuk memilih gambar atau seret gambar ke sini</p>
                            <p class="text-sm text-gray-500">PNG, JPG, GIF hingga 10MB</p>
                        </div>
                    </div>
                    <div id="image-preview-container" class="mt-6 grid grid-cols-2 gap-4 hidden">
                        <!-- Image previews will be appended here -->
                    </div>
                </div>
                <div id="jenis-images-container" class="space-y-4">
                    <!-- Dynamic jenis image inputs will be added here by JavaScript -->
                </div>
                <div class="flex justify-center pt-4">
                    <button type="submit" class="btn-submit text-white font-bold py-3 px-8 rounded-lg shadow-lg hover:shadow-xl">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                        </svg>
                        Tambah Produk
                    </button>
                </div>
            </form>
        </div>
    </section>

    <!-- Footer -->
    <footer class="site-footer bg-gray-800 text-white py-8 mt-auto">
        <div class="container mx-auto text-center px-4">
            <p>&copy; 2025 REVOZ. Semua Hak Dilindungi.</p>
        </div>
    </footer>

    <script>
        const imageInput = document.getElementById('image');
        const uploadArea = document.getElementById('upload-area');
        const previewContainer = document.getElementById('image-preview-container');

        function showPreviews(files) {
            previewContainer.innerHTML = ''; // Clear existing previews
            if (files && files.length > 0) {
                previewContainer.classList.remove('hidden');
                uploadArea.classList.add('hidden');
                Array.from(files).forEach(file => {
                    if (file.type.startsWith('image/')) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            const previewWrapper = document.createElement('div');
                            previewWrapper.className = 'relative';
                            previewWrapper.innerHTML = `
                                <img src="${e.target.result}" class="w-full h-48 object-cover rounded-lg shadow-md">
                            `;
                            previewContainer.appendChild(previewWrapper);
                        };
                        reader.readAsDataURL(file);
                    }
                });
            } else {
                previewContainer.classList.add('hidden');
                uploadArea.classList.remove('hidden');
            }
        }

        imageInput.addEventListener('change', function(event) {
            showPreviews(event.target.files);
        });

        // Drag and drop functionality
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            uploadArea.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        ['dragenter', 'dragover'].forEach(eventName => {
            uploadArea.addEventListener(eventName, highlight, false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
            uploadArea.addEventListener(eventName, unhighlight, false);
        });

        function highlight(e) {
            uploadArea.classList.add('border-blue-500', 'bg-blue-50');
        }

        function unhighlight(e) {
            uploadArea.classList.remove('border-blue-500', 'bg-blue-50');
        }

        uploadArea.addEventListener('drop', handleDrop, false);

        function handleDrop(e) {
            const dt = e.dataTransfer;
            const files = dt.files;
            imageInput.files = files;
            showPreviews(files);
        }

        const spesifikasiInput = document.getElementById('spesifikasi');
        spesifikasiInput.addEventListener('keydown', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                const cursorPos = this.selectionStart;
                const textBefore = this.value.substring(0, cursorPos);
                const textAfter = this.value.substring(cursorPos);
                
                this.value = textBefore + '\n• ' + textAfter;

                // Move cursor after the bullet
                this.selectionStart = this.selectionEnd = cursorPos + 3;
            }
        });

        // Add initial bullet if empty
        spesifikasiInput.addEventListener('focus', function() {
            if (this.value === '') {
                this.value = '• ';
            }
        });

        const jenisImagesContainer = document.getElementById('jenis-images-container');
        let jenisInputCounter = 0;

        function addJenisImageInput() {
            const inputGroup = document.createElement('div');
            inputGroup.className = 'jenis-image-input-group';
            inputGroup.innerHTML = `
                <label for="jenis_images_${jenisInputCounter}" class="block text-gray-700 font-semibold mb-2 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    Upload Gambar Jenis #${jenisInputCounter + 1}
                </label>
                <div class="relative">
                    <input type="file" id="jenis_images_${jenisInputCounter}" name="jenis_images" accept="image/*" class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10">
                    <div class="jenis-upload-area border-2 border-dashed border-gray-300 rounded-lg p-8 text-center hover:border-blue-500 transition duration-300 bg-gray-50 hover:bg-blue-50 cursor-pointer">
                        <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                        </svg>
                        <p class="text-gray-600 mb-2">Klik untuk memilih gambar atau seret gambar ke sini</p>
                        <p class="text-sm text-gray-500">PNG, JPG, GIF hingga 10MB</p>
                    </div>
                </div>
                <div class="jenis-image-preview mt-2 hidden">
                    <img src="" class="w-full h-24 object-cover rounded-lg shadow-md" alt="Jenis Image Preview">
                </div>
            `;
            jenisImagesContainer.appendChild(inputGroup);

            const currentInput = inputGroup.querySelector('input[type="file"]');
            const currentUploadArea = inputGroup.querySelector('.jenis-upload-area');
            const currentPreviewDiv = inputGroup.querySelector('.jenis-image-preview');
            const currentPreviewImg = currentPreviewDiv.querySelector('img');

            currentInput.addEventListener('change', function(event) {
                const file = event.target.files[0];
                if (file && file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        currentPreviewImg.src = e.target.result;
                        currentPreviewDiv.classList.remove('hidden');
                        currentUploadArea.classList.add('hidden');

                        // If this is the last input, add a new one
                        if (inputGroup.nextElementSibling === null) {
                            addJenisImageInput();
                        }
                    };
                    reader.readAsDataURL(file);
                } else {
                    currentPreviewDiv.classList.add('hidden');
                    currentUploadArea.classList.remove('hidden');
                    currentInput.value = '';
                }
            });

            // Drag and drop for dynamically added inputs
            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                currentUploadArea.addEventListener(eventName, preventDefaults, false);
            });

            ['dragenter', 'dragover'].forEach(eventName => {
                currentUploadArea.addEventListener(eventName, () => highlightJenis(currentUploadArea), false);
            });

            ['dragleave', 'drop'].forEach(eventName => {
                currentUploadArea.addEventListener(eventName, () => unhighlightJenis(currentUploadArea), false);
            });

            currentUploadArea.addEventListener('drop', function(e) {
                const dt = e.dataTransfer;
                const files = dt.files;
                if (files.length > 0) {
                    const file = files[0];
                    if (file.type.startsWith('image/')) {
                        currentInput.files = files; // Assign the dropped file
                        currentInput.dispatchEvent(new Event('change')); // Trigger change event
                    } else {
                        alert('Harap pilih file gambar yang valid.');
                    }
                }
            }, false);

            jenisInputCounter++;
        }

        function highlightJenis(element) {
            element.classList.add('border-blue-500', 'bg-blue-50');
        }

        function unhighlightJenis(element) {
            element.classList.remove('border-blue-500', 'bg-blue-50');
        }

        // Initial call to add the first input
        addJenisImageInput();
    </script>

</body>