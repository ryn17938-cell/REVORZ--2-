        <div class="container mx-auto text-center px-4">
            <p>&copy; 2025 REVOZ. Semua Hak Dilindungi.</p>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const imageInput = document.getElementById('image');
            const uploadArea = document.getElementById('upload-area');
            const preview = document.getElementById('image-preview');
            const previewImg = document.getElementById('preview-img');
            const removeBtn = document.getElementById('remove-preview');
            const nameInput = document.getElementById('name');
            const descriptionInput = document.getElementById('description');
            const priceInput = document.getElementById('price');
            const warnaInput = document.getElementById('warna');
            const ukuranInput = document.getElementById('ukuran');

            function showPreview(file) {
                if (file && file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        previewImg.src = e.target.result;
                        preview.classList.remove('hidden');
                        uploadArea.classList.add('hidden');
                    };
                    reader.readAsDataURL(file);
                }
            }

            function hidePreview() {
                preview.classList.add('hidden');
                uploadArea.classList.remove('hidden');
                imageInput.value = '';
                previewImg.src = ''; // Clear the image source
            }

            imageInput.addEventListener('change', function(event) {
                const file = event.target.files[0];
                showPreview(file);
            });

            // Drag and drop functionality for main image
            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                uploadArea.addEventListener(eventName, preventDefaults, false);
            });

            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }

            ['dragenter', 'dragover'].forEach(eventName => {
                uploadArea.addEventListener(eventName, highlight, false);
            });

            ['dragleave', 'drop'].forEach(eventName => {
                uploadArea.addEventListener(eventName, unhighlight, false);
            });

            function highlight(e) {
                uploadArea.classList.add('border-blue-500', 'bg-blue-50');
            }

            function unhighlight(e) {
                uploadArea.classList.remove('border-blue-500', 'bg-blue-50');
            }

            uploadArea.addEventListener('drop', handleDrop, false);

            function handleDrop(e) {
                const dt = e.dataTransfer;
                const files = dt.files;
                if (files.length > 0) {
                    const file = files[0];
                    if (file.type.startsWith('image/')) {
                        imageInput.files = files;
                        showPreview(file);
                    } else {
                        alert('Harap pilih file gambar yang valid.');
                    }
                }
            }

            removeBtn.addEventListener('click', hidePreview);

            const spesifikasiInput = document.getElementById('spesifikasi');
            spesifikasiInput.addEventListener('keydown', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    const cursorPos = this.selectionStart;
                    const textBefore = this.value.substring(0, cursorPos);
                    const textAfter = this.value.substring(cursorPos);
                    
                    this.value = textBefore + '\n• ' + textAfter;

                    // Move cursor after the bullet
                    this.selectionStart = this.selectionEnd = cursorPos + 3;
                }
            });

            // Add initial bullet if empty
            spesifikasiInput.addEventListener('focus', function() {
                if (this.value === '') {
                    this.value = '• ';
                }
            });

            const jenisImagesContainer = document.getElementById('jenis-images-container');
            let jenisInputCounter = 0;
            const deletedJenisImagesInput = document.getElementById('deleted_jenis_images');

            function addJenisImageInput(initialFile = null, isExisting = false) {
                const inputGroup = document.createElement('div');
                inputGroup.className = 'jenis-image-input-group relative mb-4 p-2 border rounded-lg shadow-sm'; // Added some styling
                inputGroup.innerHTML = `
                    <label for="jenis_images_${jenisInputCounter}" class="block text-gray-700 font-semibold mb-2 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        Gambar Jenis #${jenisInputCounter + 1}
                    </label>
                    <div class="relative">
                        <input type="file" id="jenis_images_${jenisInputCounter}" name="jenis_images" accept="image/*" class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10">
                        <div class="jenis-upload-area border-2 border-dashed border-gray-300 rounded-lg p-8 text-center hover:border-blue-500 transition duration-300 bg-gray-50 hover:bg-blue-50 cursor-pointer">
                            <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                            </svg>
                            <p class="text-gray-600 mb-2">Klik untuk memilih gambar atau seret gambar ke sini</p>
                            <p class="text-sm text-gray-500">PNG, JPG, GIF hingga 10MB</p>
                        </div>
                    </div>
                    <div class="jenis-image-preview mt-2 ${initialFile ? '' : 'hidden'}">
                        <img src="${initialFile || ''}" class="w-full h-24 object-cover rounded-lg shadow-md" alt="Jenis Image Preview">
                        ${isExisting ? `<button type="button" class="remove-existing-jenis-image-btn absolute top-1 right-1 bg-red-500 text-white rounded-full p-1 text-xs" data-image-path="${initialFile}">&times;</button>` : ''}
                    </div>
                `;
                jenisImagesContainer.appendChild(inputGroup);

                const currentInput = inputGroup.querySelector('input[type="file"]');
                const currentUploadArea = inputGroup.querySelector('.jenis-upload-area');
                const currentPreviewDiv = inputGroup.querySelector('.jenis-image-preview');
                const currentPreviewImg = currentPreviewDiv.querySelector('img');
                const removeExistingJenisImageBtn = inputGroup.querySelector('.remove-existing-jenis-image-btn');

                if (removeExistingJenisImageBtn) {
                    removeExistingJenisImageBtn.addEventListener('click', () => {
                        const imagePath = removeExistingJenisImageBtn.dataset.imagePath;
                        // Add imagePath to a hidden input for deleted images
                        if (deletedJenisImagesInput.value) {
                            deletedJenisImagesInput.value += ',' + imagePath;
                        } else {
                            deletedJenisImagesInput.value = imagePath;
                        }
                        inputGroup.remove(); // Remove from DOM
                    });
                }

                currentInput.addEventListener('change', function(event) {
                    const file = event.target.files[0];
                    if (file && file.type.startsWith('image/')) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            currentPreviewImg.src = e.target.result;
                            currentPreviewDiv.classList.remove('hidden');
                            currentUploadArea.classList.add('hidden');

                            // If this is the last input, add a new one
                            if (inputGroup.nextElementSibling === null) {
                                addJenisImageInput();
                            }
                        };
                        reader.readAsDataURL(file);
                    } else {
                        currentPreviewDiv.classList.add('hidden');
                        currentUploadArea.classList.remove('hidden');
                        currentInput.value = '';
                    }
                });

                // Drag and drop for dynamically added inputs
                ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                    currentUploadArea.addEventListener(eventName, preventDefaults, false);
                });

                ['dragenter', 'dragover'].forEach(eventName => {
                    currentUploadArea.addEventListener(eventName, () => highlightJenis(currentUploadArea), false);
                });

                ['dragleave', 'drop'].forEach(eventName => {
                    currentUploadArea.addEventListener(eventName, () => unhighlightJenis(currentUploadArea), false);
                });

                currentUploadArea.addEventListener('drop', function(e) {
                    const dt = e.dataTransfer;
                    const files = dt.files;
                    if (files.length > 0) {
                        const file = files[0];
                        if (file.type.startsWith('image/')) {
                            currentInput.files = files; // Assign the dropped file
                            currentInput.dispatchEvent(new Event('change')); // Trigger change event
                        } else {
                            alert('Harap pilih file gambar yang valid.');
                        }
                    }
                }, false);

                jenisInputCounter++;
            }

            function highlightJenis(element) {
                element.classList.add('border-blue-500', 'bg-blue-50');
            }

            function unhighlightJenis(element) {
                element.classList.remove('border-blue-500', 'bg-blue-50');
            }

            // Pre-fill existing jenis images if any
            const existingJenisImages = JSON.parse('<%- JSON.stringify(product.jenis ? product.jenis.split(',') : []) %>');
            existingJenisImages.forEach(imgSrc => {
                addJenisImageInput(imgSrc, true); // Pass true for isExisting
            });
            // Add one more empty input if there are existing images
            if (existingJenisImages.length > 0) {
                addJenisImageInput();
            } else {
                addJenisImageInput(); // Always add at least one empty input
            }

            // Get references to the new elements
            const loadingOverlay = document.getElementById('loading-overlay');
            const customPopup = document.getElementById('custom-popup');
            const customPopupIcon = customPopup.querySelector('.icon');
            const customPopupMessage = customPopup.querySelector('.message');

            // Minimum display time for loading animation (ms). Keep small so UI doesn't feel blocked.
            const minLoadingTime = 1500; // 1.5 seconds
            let loadingStartTime;

            function showLoading() {
                loadingStartTime = Date.now();
                loadingOverlay.classList.add('show');
            }

            function hideLoading() {
                const elapsedTime = Date.now() - loadingStartTime;
                const remainingTime = minLoadingTime - elapsedTime;

                if (remainingTime > 0) {
                    setTimeout(() => {
                        loadingOverlay.classList.remove('show');
                    }, remainingTime);
                } else {
                    loadingOverlay.classList.remove('show');
                }
            }

            function showCustomPopup(message, success = true) {
                customPopupMessage.textContent = message;
                customPopup.classList.remove('success', 'error');
                customPopupIcon.innerHTML = ''; // Clear previous icon

                if (success) {
                    customPopup.classList.add('success');
                    customPopupIcon.innerHTML = `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`;
                } else {
                    customPopup.classList.add('error');
                    customPopupIcon.innerHTML = `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`;
                }

                customPopup.classList.add('show');

                setTimeout(() => {
                    customPopup.classList.remove('show');
                }, 3000); // Hide after 3 seconds
            }

            // Handle form submission with XHR to enable upload progress and robust logging
            const editProductForm = document.querySelector('form');
            editProductForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const form = this;
                const formData = new FormData(form);
                const productId = '<%= product.id %>';

                console.log('[edit] Submitting product edit for id=', productId);

                showLoading(); // Show loading animation
                showProgressUI();

                const xhr = new XMLHttpRequest();
                xhr.open('PUT', `/api/products/${productId}`);

                xhr.upload.onprogress = function(event) {
                    if (event.lengthComputable) {
                        const percent = Math.round((event.loaded / event.total) * 100);
                        updateProgress(percent);
                        console.log('[edit] upload progress', percent + '%');
                    }
                };

                xhr.onload = function() {
                    console.log('[edit] XHR onload status=', xhr.status);
                    hideLoading();
                    // Try to parse JSON, but handle non-JSON responses
                    let result = null;
                    try {
                        result = JSON.parse(xhr.responseText);
                    } catch (parseErr) {
                        console.error('[edit] Failed to parse JSON response:', parseErr);
                        console.log('[edit] responseText=', xhr.responseText);
                        showCustomPopup('Server menghasilkan respons tidak valid.', false);
                        hideProgressUI();
                        return;
                    }

                    hideProgressUI();

                    if (xhr.status >= 200 && xhr.status < 300 && result && result.ok) {
                        showCustomPopup('Produk berhasil diupdate', true);
                        setTimeout(() => {
                            window.location.href = '/catalog';
                        }, 1200);
                    } else {
                        console.warn('[edit] server returned error', result);
                        showCustomPopup('Gagal mengupdate produk: ' + (result && result.message ? result.message : 'Terjadi kesalahan.'), false);
                    }
                };

                xhr.onerror = function() {
                    console.error('[edit] XHR error', xhr.status);
                    hideLoading();
                    hideProgressUI();
                    showCustomPopup('Terjadi kesalahan jaringan saat mengupload.', false);
                };

                xhr.onabort = function() {
                    console.warn('[edit] XHR aborted');
                    hideLoading();
                    hideProgressUI();
                    showCustomPopup('Upload dibatalkan.', false);
                };

                // Send the request
                try {
                    xhr.send(formData);
                } catch (sendErr) {
                    console.error('[edit] xhr.send error', sendErr);
                    hideLoading();
                    hideProgressUI();
                    showCustomPopup('Gagal memulai upload.', false);
                }
            });

            // Progress UI helpers
            function showProgressUI() {
                const container = document.getElementById('upload-progress');
                const bar = document.getElementById('upload-progress-bar');
                const text = document.getElementById('upload-progress-text');
                if (container && bar && text) {
                    container.classList.remove('hidden');
                    bar.style.width = '0%';
                    text.textContent = '0%';
                }
            }

            function updateProgress(percent) {
                const bar = document.getElementById('upload-progress-bar');
                const text = document.getElementById('upload-progress-text');
                if (bar && text) {
                    bar.style.width = percent + '%';
                    text.textContent = percent + '%';
                }
            }

            function hideProgressUI() {
                const container = document.getElementById('upload-progress');
                if (container) container.classList.add('hidden');
            }
        });
    </script>

    <!-- Loading Overlay -->
    <div id="loading-overlay" class="loading-overlay">
        <div class="spinner"></div>
    </div>

    <!-- Custom Popup Notification -->
    <div id="custom-popup" class="custom-popup">
        <div class="icon"></div>
        <div class="message"></div>
    </div>

</body>