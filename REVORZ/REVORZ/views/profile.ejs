    <% if (!nomor) { %>
    <!-- WhatsApp Number Modal -->
    <div id="whatsapp-modal" class="fixed inset-0 bg-gray-900 bg-opacity-75 flex items-center justify-center z-50">
        <div class="bg-white rounded-2xl shadow-2xl p-8 m-4 max-w-md w-full transform transition-all duration-300 scale-95 opacity-0" id="whatsapp-modal-content">
            <h2 class="text-2xl font-bold text-gray-800 text-center mb-4">Lengkapi Profil Anda</h2>
            <p class="text-center text-gray-600 mb-6">Silakan masukkan nomor WhatsApp Anda untuk melanjutkan.</p>
            <div class="space-y-4">
                <div>
                    <label for="whatsapp-input" class="block text-sm font-medium text-gray-700 mb-1">Nomor WhatsApp</label>
                    <input type="text" id="whatsapp-input" placeholder="Contoh: 081234567890" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
