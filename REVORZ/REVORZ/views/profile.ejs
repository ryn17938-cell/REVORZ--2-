    <script>
        try {
            console.info('Profile page script starting');
        // --- WhatsApp Modal Logic (client-side) --- 
        const hasWhatsAppNumber = JSON.parse('<%- JSON.stringify(!!nomor) %>');
        if (!hasWhatsAppNumber) {
            const modal = document.getElementById('whatsapp-modal');
            const modalContent = document.getElementById('whatsapp-modal-content');
            const saveBtn = document.getElementById('save-whatsapp-btn');
            const input = document.getElementById('whatsapp-input');
            const errorP = document.getElementById('whatsapp-error');

            setTimeout(() => {
                modal.classList.remove('hidden');
                modalContent.classList.remove('scale-95', 'opacity-0');
                modalContent.classList.add('scale-100', 'opacity-100');
            }, 100);

            saveBtn.addEventListener('click', async () => {
                const nomor = input.value.trim();
                errorP.classList.add('hidden');
                if (!nomor) {
                    errorP.textContent = 'Nomor tidak boleh kosong.';
                    errorP.classList.remove('hidden');
                    return;
                }
                const response = await postJson('/api/user/update-whatsapp', { nomor });
                if (response.ok) {
                    showCustomPopup('Nomor berhasil disimpan!', true);
                    modalContent.classList.add('scale-95', 'opacity-0');
                    setTimeout(() => {
                        modal.classList.add('hidden');
                        location.reload();
                    }, 300);
                } else {
                    errorP.textContent = response.message || 'Terjadi kesalahan.';
                    errorP.classList.remove('hidden');
                }
            });
        }

        document.getElementById('mobile-menu-button').onclick = function() {
            document.getElementById('mobile-menu').classList.toggle('active');
        };

        const backToTopButton = document.getElementById('back-to-top');
        window.onscroll = function() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                backToTopButton.classList.remove('hidden');
            } else {
                backToTopButton.classList.add('hidden');
            }
        };
        backToTopButton.onclick = function() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.classList.add('in-view');
                    }, index * 150);
                }
            });
        }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });

        document.querySelectorAll('.fade-in-up').forEach((element) => {
            observer.observe(element);
        });

        async function postJson(url, body) {
            const res = await fetch(url, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(body)
            });
            return res.json();
        }

    function showCustomPopup(message, success = true) {
            const popup = document.getElementById('custom-popup');
            if (!popup) return;
            const iconContainer = popup.querySelector('.icon');
            const messageContainer = popup.querySelector('.message');
            
            messageContainer.textContent = message;
            popup.classList.remove('success', 'error');
            
            if (success) {
                popup.classList.add('success');
                iconContainer.innerHTML = `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`;
            } else {
                popup.classList.add('error');
                iconContainer.innerHTML = `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`;
            }

            popup.classList.add('show');
            setTimeout(() => popup.classList.remove('show'), 3000);
        }

        // Global fallback used by inline onclick handlers when main script didn't attach
        function inlineCopyFallback(el) {
            function doShow(message, success) {
                var popup = document.getElementById('custom-popup');
                if (!popup) { alert(message); return; }
                var icon = popup.querySelector('.icon');
                var msgc = popup.querySelector('.message');
                msgc.textContent = message;
                popup.classList.remove('success', 'error');
                popup.classList.add(success ? 'success' : 'error');
                if (success) {
                    icon.innerHTML = '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>';
                } else {
                    icon.innerHTML = '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>';
                }
                popup.classList.add('show');
                setTimeout(function () { popup.classList.remove('show'); }, 3000);
            }

            var nomor = el && el.dataset && el.dataset.nomor ? el.dataset.nomor : (document.getElementById('profile-whatsapp-number') ? document.getElementById('profile-whatsapp-number').textContent.trim() : null);
            if (!nomor) { doShow('Nomor WhatsApp tidak tersedia', false); return false; }

            if (navigator.clipboard && navigator.clipboard.writeText) {
                navigator.clipboard.writeText(nomor).then(function () { doShow('Nomor WhatsApp berhasil disalin!', true); }).catch(function () {
                    try {
                        var t = document.createElement('textarea'); t.value = nomor; document.body.appendChild(t); t.select(); document.execCommand('copy'); document.body.removeChild(t); doShow('Nomor WhatsApp berhasil disalin! (Fallback)', true);
                    } catch (e) {
                        doShow('Gagal menyalin nomor WhatsApp.', false);
                    }
                });
            } else {
                try {
                    var t = document.createElement('textarea'); t.value = nomor; document.body.appendChild(t); t.select(); document.execCommand('copy'); document.body.removeChild(t); doShow('Nomor WhatsApp berhasil disalin! (Fallback)', true);
                } catch (e) {
                    doShow('Gagal menyalin nomor WhatsApp.', false);
                }
            }
            return false;
        }

        document.querySelectorAll('.status-changer').forEach(selector => {
            selector.addEventListener('change', async (e) => {
                const cartId = e.target.dataset.cartId;
                const newStatus = e.target.value;
                const response = await postJson('/api/admin/orders/update-status', { cart_id: cartId, new_status: newStatus });
                if (response.ok) {
                    showCustomPopup(`Status pesanan #${cartId} berhasil diubah ke ${newStatus}`, true);
                } else {
                    showCustomPopup(`Gagal mengubah status: ${response.message}`, false);
                }
            });
        });

        document.querySelectorAll('.like-btn').forEach(button => {
            button.addEventListener('click', async (e) => {
                const buttonEl = e.currentTarget;
                const productId = buttonEl.dataset.productId;
                if (!productId) return;
                const isCurrentlyLiked = buttonEl.classList.contains('text-red-500');
                const newLikedState = !isCurrentlyLiked;
                buttonEl.classList.toggle('text-red-500', newLikedState);
                buttonEl.classList.toggle('text-gray-400', !newLikedState);
                const response = await postJson('/api/product/toggle-like', { productId });
                if (response.ok) {
                    showCustomPopup(response.message, true);
                    const favoriteStat = document.querySelector('.stat-card:nth-child(2) .stat-number');
                    if (favoriteStat) favoriteStat.textContent = response.likeCount;
                } else {
                    showCustomPopup(`Gagal: ${response.message || 'Terjadi kesalahan'}`, false);
                    buttonEl.classList.toggle('text-red-500', isCurrentlyLiked);
                    buttonEl.classList.toggle('text-gray-400', !isCurrentlyLiked);
                }
            });
        });

        document.querySelectorAll('.toggle-password').forEach(toggle => {
            toggle.addEventListener('click', function () {
                const targetId = this.dataset.target;
                const passwordInput = document.getElementById(targetId);
                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    this.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M3.707 2.293a1 1 0 00-1.414 1.414L5.586 8H4a1 1 0 000 2h1.586l-2.293 2.293a1 1 0 001.414 1.414L8 11.414V13a1 1 0 102 0v-1.586l2.293 2.293a1 1 0 001.414-1.414L11.414 10H13a1 1 0 100-2h-1.586l2.293-2.293a1 1 0 00-1.414-1.414L10 8.586V7a1 1 0 10-2 0v1.586L3.707 2.293zM10 12a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" /></svg>`; // Eye-slash icon
                } else {
                    passwordInput.type = 'password';
                    this.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path d="M10 12a2 2 0 100-4 2 2 0 000 4z" /><path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" /></svg>`; // Eye icon
                }
            });
        });

        const filterButtons = document.querySelectorAll('.admin-filter-btn');
        const orderList = document.getElementById('admin-order-list');
        if (filterButtons.length > 0 && orderList) {
            const orderItems = orderList.querySelectorAll('.activity-item');
            filterButtons.forEach(button => {
                button.addEventListener('click', () => {
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active');
                    const filterValue = button.dataset.filter;
                    orderItems.forEach(item => {
                        item.style.display = (filterValue === 'all' || item.dataset.status === filterValue) ? 'block' : 'none';
                    });
                });
            });
        }

        // --- Rating Modal Logic ---
        const ratingModal = document.getElementById('rating-modal');
        const ratingModalContent = document.getElementById('rating-modal-content');
        const closeRatingModalBtn = document.getElementById('close-rating-modal');
        const ratingForm = document.getElementById('rating-form');
        const productIdInput = document.getElementById('rating-product-id');
        const productNameSpan = document.getElementById('rating-product-name');
        const stars = document.querySelectorAll('#star-rating-input .star-label');
        const ratingValueInput = document.getElementById('rating-value');

        // --- Change Password Modal Logic ---
        const changePasswordModal = document.getElementById('change-password-modal');
        const changePasswordModalContent = document.getElementById('change-password-modal-content');
        const openPasswordModalBtn = document.getElementById('change-password-btn');
        const closePasswordModalBtn = document.getElementById('close-password-modal');
        const passwordForm = document.getElementById('change-password-form');
        const passwordError = document.getElementById('password-error');

        if (openPasswordModalBtn) {
            openPasswordModalBtn.addEventListener('click', () => {
                changePasswordModal.classList.remove('hidden');
                setTimeout(() => {
                    changePasswordModal.classList.remove('opacity-0');
                    changePasswordModalContent.classList.remove('scale-95', 'opacity-0');
                }, 10);
            });
        }

        function closePasswordModal() {
            changePasswordModalContent.classList.add('scale-95', 'opacity-0');
            changePasswordModal.classList.add('opacity-0');
            setTimeout(() => {
                changePasswordModal.classList.add('hidden');
                passwordForm.reset();
                passwordError.classList.add('hidden');
            }, 300);
        }

        closePasswordModalBtn.addEventListener('click', closePasswordModal);
        changePasswordModal.addEventListener('click', (e) => {
            if (e.target === changePasswordModal) {
                closePasswordModal();
            }
        });

        passwordForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            passwordError.classList.add('hidden');

            const newPassword = document.getElementById('new-password').value;
            const confirmPassword = document.getElementById('confirm-password').value;

            if (newPassword !== confirmPassword) {
                passwordError.textContent = 'Password baru tidak cocok.';
                passwordError.classList.remove('hidden');
                return;
            }
            
            if (newPassword.length < 6) { // Example validation
                passwordError.textContent = 'Password baru minimal harus 6 karakter.';
                passwordError.classList.remove('hidden');
                return;
            }

            const formData = new FormData(passwordForm);
            const data = Object.fromEntries(formData.entries());

            const response = await postJson('/api/user/change-password', data);

            if (response.ok) {
                showCustomPopup('Password berhasil diubah!', true);
                closePasswordModal();
            } else {
                passwordError.textContent = response.message || 'Gagal mengubah password.';
                passwordError.classList.remove('hidden');
            }
        });

        // --- Delete Account Logic ---
        const deleteAccountBtn = document.getElementById('delete-account-btn');
        const deleteAccountModal = document.getElementById('delete-account-modal');
        const deleteAccountModalContent = document.getElementById('delete-account-modal-content');
        const closeDeleteAccountModalBtn = document.getElementById('close-delete-account-modal');
        const cancelDeleteAccountBtn = document.getElementById('cancel-delete-account-btn');
        const confirmDeleteAccountBtn = document.getElementById('confirm-delete-account-btn');

        function openDeleteAccountModal() {
            deleteAccountModal.classList.remove('hidden');
            setTimeout(() => {
                deleteAccountModal.classList.remove('opacity-0');
                deleteAccountModalContent.classList.remove('scale-95', 'opacity-0');
            }, 10);
        }

        function closeDeleteAccountModal() {
            deleteAccountModalContent.classList.add('scale-95', 'opacity-0');
            deleteAccountModal.classList.add('opacity-0');
            setTimeout(() => {
                deleteAccountModal.classList.add('hidden');
            }, 300);
        }

        if (deleteAccountBtn) {
            deleteAccountBtn.addEventListener('click', openDeleteAccountModal);
        }

        closeDeleteAccountModalBtn.addEventListener('click', closeDeleteAccountModal);
        cancelDeleteAccountBtn.addEventListener('click', closeDeleteAccountModal);
        deleteAccountModal.addEventListener('click', (e) => {
            if (e.target === deleteAccountModal) {
                closeDeleteAccountModal();
            }
        });

        confirmDeleteAccountBtn.addEventListener('click', async () => {
            const response = await fetch('/api/user/delete-account', {
                method: 'POST', // Assuming POST for simplicity, could be DELETE
                headers: { 'Content-Type': 'application/json' }
            });
            const result = await response.json();

            if (result.ok) {
                showCustomPopup('Akun Anda berhasil dihapus.', true);
                closeDeleteAccountModal();
                setTimeout(() => {
                    window.location.href = '/'; // Redirect to home or login page
                }, 1500);
            } else {
                showCustomPopup(result.message || 'Gagal menghapus akun.', false);
            }
        });

        function openRatingModal(productId, productName) {
            productIdInput.value = productId;
            productNameSpan.textContent = productName;
            ratingModal.classList.remove('hidden');
            setTimeout(() => {
                ratingModal.classList.remove('opacity-0');
                ratingModalContent.classList.remove('scale-95', 'opacity-0');
                ratingModalContent.classList.add('scale-100', 'opacity-100');
            }, 10);
        }

        function closeRatingModal() {
            ratingModalContent.classList.remove('scale-100', 'opacity-100');
            ratingModalContent.classList.add('scale-95', 'opacity-0');
            ratingModal.classList.add('opacity-0');
            setTimeout(() => {
                ratingModal.classList.add('hidden');
                resetRatingForm();
            }, 300);
        }
        
        function resetRatingForm() {
            ratingForm.reset();
            ratingValueInput.value = 0;
            stars.forEach(s => s.classList.remove('selected', 'hovered'));
        }

        document.querySelectorAll('.rate-btn').forEach(button => {
            button.addEventListener('click', (e) => {
                const productId = e.currentTarget.dataset.productId;
                const productName = e.currentTarget.dataset.productName;
                openRatingModal(productId, productName);
            });
        });

        closeRatingModalBtn.addEventListener('click', closeRatingModal);
        ratingModal.addEventListener('click', (e) => {
            if (e.target === ratingModal) {
                closeRatingModal();
            }
        });

        // Star rating interaction
        stars.forEach(star => {
            star.addEventListener('mouseover', () => {
                const value = parseInt(star.dataset.value);
                stars.forEach((s, i) => {
                    s.classList.toggle('hovered', i < value);
                });
            });
            star.addEventListener('mouseout', () => {
                stars.forEach(s => s.classList.remove('hovered'));
            });
            star.addEventListener('click', () => {
                const value = parseInt(star.dataset.value);
                ratingValueInput.value = value;
                stars.forEach((s, i) => {
                    s.classList.toggle('selected', i < value);
                });
            });
        });

        ratingForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const productId = productIdInput.value;
            const rating = ratingValueInput.value;
            const review = document.getElementById('rating-review').value;

            if (rating < 1) {
                showCustomPopup('Silakan pilih rating bintang.', false);
                return;
            }

            const response = await postJson('/api/products/rate', { productId, rating, review });

            if (response.ok) {
                showCustomPopup(response.message || 'Ulasan berhasil dikirim!', true);
                closeRatingModal();
                // Disable the button for the product that was just rated
                const ratedButton = document.querySelector(`.rate-btn[data-product-id="${productId}"]`);
                if (ratedButton) {
                    ratedButton.textContent = 'Sudah Diulas';
                    ratedButton.disabled = true;
                    ratedButton.classList.remove('action-btn');
                    ratedButton.classList.add('secondary-btn');
                }
                // Update stats
                const reviewsGivenStat = document.querySelector('.stat-card:nth-child(3) .stat-number');
                if(reviewsGivenStat) {
                    reviewsGivenStat.textContent = parseInt(reviewsGivenStat.textContent) + 1;
                }
            } else {
                showCustomPopup(response.message || 'Gagal mengirim ulasan.', false);
            }
        });

    // --- Copy WhatsApp Number Logic ---
        (function initCopyWhatsApp() {
            console.log('initCopyWhatsApp running, document.readyState=', document.readyState);
            if (document.readyState === 'loading') {
                return document.addEventListener('DOMContentLoaded', initCopyWhatsApp);
            }

            const copyButtons = document.querySelectorAll('.copy-whatsapp-btn');
            if (!copyButtons || copyButtons.length === 0) {
                console.log('No copy-whatsapp-btn elements found');
                return;
            }

            copyButtons.forEach(button => {
                // ensure we don't attach multiple times
                if (button._copyHandlerAttached) return;
                button._copyHandlerAttached = true;

                button.addEventListener('click', async (e) => {
                    const btn = e.currentTarget;
                    const nomor = (btn.dataset && btn.dataset.nomor) ? btn.dataset.nomor : (document.getElementById('profile-whatsapp-number') ? document.getElementById('profile-whatsapp-number').textContent.trim() : null);
                    console.log('Copy button clicked. Nomor:', nomor);

                    if (!nomor) {
                        showCustomPopup('Nomor WhatsApp tidak tersedia.', false);
                        console.warn('Nomor is empty or undefined, cannot copy.');
                        return;
                    }

                    // Try Clipboard API
                    try {
                        if (navigator.clipboard && navigator.clipboard.writeText) {
                            await navigator.clipboard.writeText(nomor);
                            console.log('Copied using Clipboard API.');
                            showCustomPopup('Nomor WhatsApp berhasil disalin!', true);
                            // UI feedback
                            const originalText = btn.textContent;
                            btn.textContent = 'Tersalin!';
                            btn.classList.add('text-green-600');
                            setTimeout(() => {
                                btn.textContent = originalText;
                                btn.classList.remove('text-green-600');
                            }, 2500);
                            return;
                        }
                    } catch (err) {
                        console.warn('Clipboard API failed:', err);
                        // fall through to fallback
                    }

                    // Fallback method
                    try {
                        const textarea = document.createElement('textarea');
                        textarea.value = nomor;
                        // Ensure textarea is not visible and not affected by page layout
                        textarea.style.position = 'fixed';
                        textarea.style.left = '-9999px';
                        textarea.style.top = '0';
                        document.body.appendChild(textarea);
                        textarea.focus();
                        textarea.select();
                        const successful = document.execCommand('copy');
                        document.body.removeChild(textarea);
                        if (successful) {
                            console.log('Copied using execCommand fallback.');
                            showCustomPopup('Nomor WhatsApp berhasil disalin! (Fallback)', true);
                            const originalText = btn.textContent;
                            btn.textContent = 'Tersalin!';
                            btn.classList.add('text-green-600');
                            setTimeout(() => {
                                btn.textContent = originalText;
                                btn.classList.remove('text-green-600');
                            }, 2500);
                        } else {
                            console.error('Fallback copy command returned false.');
                            showCustomPopup('Gagal menyalin nomor WhatsApp.', false);
                        }
                    } catch (fallbackErr) {
                        console.error('Fallback copy failed:', fallbackErr);
                        showCustomPopup('Gagal menyalin nomor WhatsApp.', false);
                    }
                });
            });
        })();

        } catch (err) {
            // Ensure any error is visible in console so we can debug why handlers may not attach
            console.error('Profile page script error:', err);
        }
    </script>

